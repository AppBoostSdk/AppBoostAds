<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:clipChildren="false"

    >

    <ImageView
        android:id="@+id/graphicImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/featuregraphic"
        />



    <LinearLayout
        android:id="@+id/itemsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="10dp"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/interstitialbackground"
        android:orientation="vertical"
        android:translationZ="10dp"
        android:stateListAnimator="@null"
        >

        <ImageView
            android:id="@+id/mImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/hotelicon"
            android:layout_gravity="center"

            />


        <TextView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="★★★★★"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="#FFC107"

            />

        <TextView
            android:id="@+id/poptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airtel TV"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/desctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlimited Access To Content"
            android:textSize="18sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/closebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/closebntbackground"
                android:text="Close"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="6dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_weight="1"/>

        <Button
            android:id="@+id/installbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btninstallbackground"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="25dp"
            android:text="Install"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_weight="1"/>


        </LinearLayout>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/mod"
            android:layout_marginTop="7dp"
            />

    </LinearLayout>



</RelativeLayout>