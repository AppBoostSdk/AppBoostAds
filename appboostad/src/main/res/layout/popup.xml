<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="460dp"
    android:layout_gravity="center"
    android:background="@drawable/popupbackground">

    <!--<ImageView
        android:id="@+id/closebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"


        />
-->
    <TextView
        android:id="@+id/recommendedtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Apps"
        android:textSize="24sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/mImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/recommendedtxt"
        />

    <TextView
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="★★★★★"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFC107"
        android:layout_below="@+id/mImage"/>

    <TextView
        android:id="@+id/poptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Videos from FB"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/stars"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/desctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Images, Videos and Giffs with supper speed and ultimate fun and glum enjoy it everyday"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/poptxt"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/installbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/popupbackground"
        android:backgroundTint="@color/whatsapColor"
        android:text="Install"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>